<style>
    /*grouwingBorder*/
    ul.growingBorder {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    ul.growingBorder li {
        list-style: none;
    }

    ul.growingBorder li a {
        text-decoration: none;
        color: white;
        font-size: 1rem;
        display: block;
        padding: 1rem 2rem;
        position: relative;
    }

    ul.growingBorder li a::before {
        content: "";
        position: absolute;
        width: 100%;
        height: .1rem;
        top: 0;
        left: 0;
        background-color: white;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out 0s;
        transform-origin: left;
    }

    ul.growingBorder li a:hover:before {
        transform: scaleX(1);
    }

    ul.growingBorder li a::after {
        content: "";
        position: absolute;
        width: 100%;
        height: .1rem;
        bottom: 0;
        left: 0;
        background-color: white;
        transform: scaleX(0);
        transition: all 0.3s ease-in-out;
        transform-origin: right;
    }

    ul.growingBorder li a:hover:after {
        transform: scaleX(1);
    }

    /*creativeBg*/
    .creativeBg {
        padding: 0;
        margin: 0;
        display: flex;
        list-style: none;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    .creativeBg li a {
        text-decoration: none;
        color: white;
        text-transform: uppercase;
        font-size: 1rem;
        padding: 0.5rem 0.7rem;
        margin: 0 0.7rem;
        display: block;
        position: relative;
        transition: all 0.3s;
    }

    .creativeBg li a:before {
        content: "";
        position: absolute;
        bottom: 1rem;
        left: 1rem;
        width: 1rem;
        height: 1rem;
        border: 3px solid tomato;
        border-width: 0 0 3px 3px;
        opacity: 0;
        transition: all 0.3s;
    }

    .creativeBg li a:after {
        content: "";
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 1rem;
        height: 1rem;
        border: 3px solid tomato;
        border-width: 3px 3px 0 0;
        opacity: 0;
        transition: all 0.3s;
    }

    .creativeBg li a:hover {
        color: tomato;
    }

    .creativeBg li a:hover:before {
        bottom: -0.5rem;
        left: -0.5rem;
        opacity: 1;
        transition: all 0.3s;
        
    }

    .creativeBg li a:hover:after {
        top: -0.5rem;
        right: -0.5rem;
        opacity: 1;
        transition: all 0.3s;
    }

    /*creativeSplitted*/
    ul.creativeSplitted {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    ul.creativeSplitted li a {
        display: block;
        text-align: center;
        width: 10rem;
        height: 2rem;
        color: white;
        position: relative;
        transition: all 0.3s;
    }

    ul.creativeSplitted li a span {
        position: absolute;
        width: 25%;
        height: 100%;
        background-color: tomato;
        z-index: -1;
        left: 0;
        top: 0;
        transform: scaleY(0);
        transform-origin: top;
        transition: all 0.3s;
    }

    ul.creativeSplitted li a:hover span {
        transform: scaleY(1);
    }

    ul.creativeSplitted li a span:nth-child(1) {
        left: 0;
        top: -10%;
    }

    ul.creativeSplitted li a span:nth-child(2) {
        left: 25%;
        top: -10%;
        transition-delay: 0.15s;
    }

    ul.creativeSplitted li a span:nth-child(3) {
        left: 50%;
        top: -10%;
        transition-delay: 0.3s;
    }

    ul.creativeSplitted li a span:nth-child(4) {
        left: 75%;
        top: -10%;
        transition-delay: 0.45s;
    }

    /*creative2MovingBorders*/
    ul.creative2MovingBorders {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    ul.creative2MovingBorders li a {
        text-decoration: none;
        color: white;
        text-transform: uppercase;
        font-size: 1rem;
        padding: 0.5rem 0.7rem;
        margin: 0 0.7rem;
        display: block;
        position: relative;
        transition: all 0.3s;
    }

    ul.creative2MovingBorders li a:before {
        content: "";
        position: absolute;
        bottom: 0rem;
        left: 0rem;
        width: 0;
        border-bottom: 3px solid #00bcd4;
        opacity: 0 ;
        transition: all 0.3s;
    }

    ul.creative2MovingBorders li a:after {
        content: "";
        position: absolute;
        bottom: 0rem;
        right: 0rem;
        width: 0;
        border-bottom: 3px solid #f0f;
        opacity: 0;
        transition: all 0.3s;
    }

    ul.creative2MovingBorders li a:hover:before {
        width: 50%;
        opacity: 1;
        transform: translateX(100%) ;
        transition: all 0.3s;
        
    }

    ul.creative2MovingBorders li a:hover:after {
        width: 50%;
        opacity: 1;
        transform: translateX(-100%);
        transition: all 0.3s;
    }

    /*creativeBlurry*/
    ul.creativeBlurry {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    ul.creativeBlurry li a {
        text-decoration: none;
        color: white;
        text-transform: uppercase;
        font-size: 1rem;
        padding: 0.5rem 0.7rem;
        margin: 0 0.7rem;
        display: block;
        position: relative;
        transition: all 0.3s;
    }

    ul.creativeBlurry:hover a {
        filter: blur(0.2rem);
        opacity: 0.2;
    }

    ul.creativeBlurry li a:hover {
        transform: scale(1.5);
        opacity: 1;
        filter: blur(0);
    }

    ul.creativeBlurry li a:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: tomato;
        opacity: 1 ;
        transition: all 0.3s;
        transform: scale(0);
    }

    ul.creativeBlurry li a:hover:before {
        transform: scale(1);
        z-index: -1;
    }

    /*borderWithBg*/
    ul.borderWithBg {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    ul.borderWithBg li a {
        text-decoration: none;
        color: tomato;
        text-transform: uppercase;
        font-size: 1rem;
        font-weight: bold;
        padding: 1rem 1.4rem;
        margin: 0 0.7rem;
        display: block;
        position: relative;
        transition: all 0.5s;
    }

    ul.borderWithBg li a:hover {
        color: white;
    }

    ul.borderWithBg li a:before{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;        
        transition: all 0.5s;
        transform: scaleY(2);
        border-top: 2px solid tomato;
        border-bottom: 2px solid tomato;
    }

    ul.borderWithBg li a:hover:before {
        transform: scaleY(1.2);
        opacity: 1;
    }

    ul.borderWithBg li a:after{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: tomato;
        z-index: -1;
        opacity: 0;        
        transition: all 0.5s;
        transform: scale(0);
    }

    ul.borderWithBg li a:hover:after {
        opacity: 1;
        transform: scale(1);
        transition: all 0.5s;
    }

    /*rotatingBorder*/
    ul.rotatingBorder {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    ul.rotatingBorder li a {
        text-decoration: none;
        color: tomato;
        text-transform: uppercase;
        font-size: 1rem;
        font-weight: bold;
        padding: 0.5rem 1rem;
        margin: 0 0.7rem;
        display: block;
        position: relative;
        transition: all 0.5s;
    }

    ul.rotatingBorder li a:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-top: 2px solid tomato;
        border-left: 2px solid tomato;
        transition: all 0.5s;
        box-sizing: border-box;
        transform-origin: left;
    }

    ul.rotatingBorder li a:hover:before {
        width: 0.5rem;
        height: 0.5rem;
        transform: rotate(360deg);
    }

    ul.rotatingBorder li a:after {
        content: "";
        position: absolute;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
        border-bottom: 2px solid tomato;
        border-right: 2px solid tomato;
        transition: all 0.5s;
        box-sizing: border-box;
        transform-origin: right;
    }

    ul.rotatingBorder li a:hover:after {
        width: 0.5rem;
        height: 0.5rem;
        transform: rotate(360deg);

    }

    /*creativeColorful*/
    ul.creativeColorful {
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    ul.creativeColorful li a {
        text-decoration: none;
        color: transparent;
        -webkit-text-stroke: 1px white;
        text-transform: uppercase;
        font-size: 3rem;
        font-weight: 900;
        padding: 0.5rem 1rem;
        margin: 0 0.7rem;
        position: relative;
        display: block;
        transition: all 0.5s;
    }

    ul.creativeColorful li a:before, a:after {
        content: attr(data-content) "";
        position: absolute;
        bottom: 0.5rem;
        left:1rem;
        transition: 0.5s;
        opacity: 0;
    }

    ul.creativeColorful li a:hover:before {
        color: rgb(187, 0, 0);
        z-index: 1;
        opacity: 1;
        -webkit-text-stroke: 1px black;
        transform: translate(0.3rem, -0.3rem);
    }

    ul.creativeColorful li a:hover:after {
        color: rgb(118, 239, 255);
        z-index: 2;
        opacity: 1;
        -webkit-text-stroke: 1px black;
        transform: translate(0.8rem, -0.8rem);
    }

    ul.creativeColorful li a:hover {
        color: white;
    }
</style>