---
import Layout from "../layouts/Layout.astro"
---

<Layout title="buttons">
    <div class="container flex" transition:animate="slide">

        <a href="#" class=" slideIn justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" stretch justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" slideMessage justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" glassEffect justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" textScaling justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" circularSwapping justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" layerSwapping justify-center mx-auto mb-5">Hover Me</a>

        <div class="next w-full flex">
            <a href="/buttons-2" class="links_basics text-center mx-auto mt-5 mb-5">La suite</a>
        </div>
    </div>
</Layout>

<style>
    /* SLIDE IN BUTTON */
    a.slideIn{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 1s;
        overflow: hidden;
    }

    a.slideIn:before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background: white;
        z-index: -1;
        transform: translateX(-100%);
        transition: all 1s;
    }

    a.slideIn:hover:before {
        transform: translateX(0);
        transition: all 1s;
    }

    a.slideIn:hover {
        color: black;
        transition: all 1s;
    }

    /*STRETCH BUTTON*/

    a.stretch{
        text-decoration: none;
        padding: 1rem 4rem;
        color: white;
        border: 3px solid white;
        text-transform: uppercase;
        font-size: 1.5rem;
        font-family: sans-serif;
        font-weight: 300;
        letter-spacing: -0.1rem;
        position: relative;
        transition: all 0.5s;
    }
a.stretch:hover {
    font-weight: 900;
    letter-spacing: 0.4rem;
    border: 7px solid white;
}

/* SLIDE-IN WITH MESSAGE */
a.slideMessage{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }

    a.slideMessage:before {
        content: "YEAH! ";
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background: white;
        transform: translateY(-100%);
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    a.slideMessage:hover:before {
        transform: translateY(0);
        transition: all 0.3s;
    }

    a.slideMessage:hover {
        color: black;
        transition: all 1s;
    }
    /*GLASS EFFECT*/
    a.glassEffect{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }

    a.glassEffect:hover {
        background: #F44336;
    }

    a.glassEffect:before {
        content: "";
        background: white;
        left: 0;
        top: 0;
        height: 1.5rem;
        width: 100%;
        position: absolute;
        transform: translateX(-100%) rotate(45deg);
        transition: all 0.3s;
    }

    a.glassEffect:hover:before{
        transform: translateX(100%) rotate(45deg);
        transition: all 0.3s;
    }

    /*slideInOut*/
    a.slideInOut{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }

    /*textScaling*/
    a.textScaling{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }
    a.textScaling:before{
        content: "Hover Me ";
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: white;
        color: black;
        display: flex;
        justify-content: center;
        align-items: center;
        transform: scale(10);
        opacity: 0;
        transition: all 0.3s;
    }

    a.textScaling:hover:before{
        transform: scale(1);
        opacity: 1;
        transition: all 0.3s;
    }

/*circularSwapping*/
a.circularSwapping{
        text-decoration: none;
        background: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.5s;
        overflow: hidden;
        text-transform: uppercase;
        cursor: pointer;
    }

    a.circularSwapping:before{
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        height: 0%;
        width: 100%;
        background: white;
        z-index: -1;
        transition: all 0.3s;
        border-radius: 0 0 50% 50%;
    }

    a.circularSwapping:hover:before{
        height: 190%;
        transition: all 0.3s;
    }

    a.circularSwapping:hover{
        color: black;
        transition: all 0.3s;
    }

    /*layerSwapping*/
    a.layerSwapping{
        text-decoration: none;
        background: none;
        color: transparent;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.5s;
        text-transform: uppercase;
        letter-spacing: 0.2rem;
        cursor: pointer;
    }
    a.layerSwapping:before{
        content: "hover me";
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background: white;
        background: #363636;
        color: #ff0;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.5s;
    }
    a.layerSwapping:hover:before{
        left: 100%;
        transition: all 0.5s;
        transform: scale(0) rotateY(360deg);
        opacity: 0;
    }

    a.layerSwapping:after{
        content: "hover me";
        position: absolute;
        left: -100%;
        top: 0;
        height: 100%;
        width: 100%;
        background: white;
        background: #363636;
        color: #ff0;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.5s;
        transform: scale(0) rotateY(0deg);
        opacity: 0;
    }
    a.layerSwapping:hover:after{
        left: 0;
        transition: all 0.5s;
        transform: scale(1) rotateY(360deg);
        opacity: 1;
    }
</style>