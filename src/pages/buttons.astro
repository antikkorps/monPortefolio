---
import Layout from "../layouts/Layout.astro"
---

<Layout title="buttons">
    <div class="container flex">

        <a href="#" class=" slideIn justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" stretch justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" slideMessage justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" glassEffect justify-center mx-auto mb-5">Hover Me</a>
        <a href="#" class=" slideInOut justify-center mx-auto mb-5">Hover Me</a>
        <button class="creative-button">Cliquez ici</button>

    </div>
</Layout>

<style>
    /* SLIDE IN BUTTON */
    a.slideIn{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 1s;
        overflow: hidden;
    }

    a.slideIn:before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background: white;
        z-index: -1;
        transform: translateX(-100%);
        transition: all 1s;
    }

    a.slideIn:hover:before {
        transform: translateX(0);
        transition: all 1s;
    }

    a.slideIn:hover {
        color: black;
        transition: all 1s;
    }

    /*STRETCH BUTTON*/

    a.stretch{
        text-decoration: none;
        padding: 1rem 4rem;
        color: white;
        border: 3px solid white;
        text-transform: uppercase;
        font-size: 1.5rem;
        font-family: sans-serif;
        font-weight: 300;
        letter-spacing: -0.1rem;
        position: relative;
        transition: all 0.5s;
    }
a.stretch:hover {
    font-weight: 900;
    letter-spacing: 0.4rem;
    border: 7px solid white;
}

/* SLIDE-IN WITH MESSAGE */
a.slideMessage{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 1s;
        overflow: hidden;
    }

    a.slideMessage:before {
        content: "YEAH! ";
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background: white;
        transform: translateY(-100%);
        transition: all 1s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    a.slideMessage:hover:before {
        transform: translateY(0);
        transition: all 1s;
    }

    a.slideMessage:hover {
        color: black;
        transition: all 1s;
    }
    /*GLASS EFFECT*/
    a.glassEffect{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }

    a.glassEffect:hover {
        background: #F44336;
    }

    a.glassEffect:before {
        content: "";
        background: white;
        left: 0;
        top: 0;
        height: 1.5rem;
        width: 100%;
        position: absolute;
        transform: translateX(-100%) rotate(45deg);
        transition: all 0.3s;
    }

    a.glassEffect:hover:before{
        transform: translateX(100%) rotate(45deg);
        transition: all 0.3s;
    }

    /*slideInOut*/
    a.slideInOut{
        text-decoration: none;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        border: 3px solid white;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }


</style>