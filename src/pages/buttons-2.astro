<style>
    /* creative3 */
    a.creative3{
        text-decoration: none;
        color: white;
        background: transparent;
        text-transform: uppercase;
        font-family: sans-serif;
        font-size: 1.5rem;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.5s;
        overflow: hidden;
    }

    a.creative3:before,
    a.creative3:after {
        content: "";
        position: absolute;
        top: 50%;
        width: 1rem;
        height: 1rem;
        background: white;
        border-radius: 50%;
        transform: translateY(-50%);
        transition: all 0.3s;
        z-index: -1;
        opacity: 0;
    }

    a.creative3:before {
        left: 0;
        box-shadow: 2.5rem 0 0 white;
    }

    a.creative3:after {
        right: 0;
        box-shadow: -2.5rem 0 0 white;
    }

    a.creative3:hover:before {
    left: 50%;
    box-shadow: 1rem 0 0 white;
    opacity: 1;
    }
    a.creative3:hover:after {
    right: 50%;
    box-shadow: 1rem 0 0 white;
    opacity: 1;
    }

    a.creative3 span{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: white;
        border-radius: 1rem;
        transform: scale(0);
        transition: all 0.5s;
        z-index: -1;
    }
    a.creative3:hover span{
        transform: scale(1);
        transition-delay: 0.4s;
    }
    a.creative3:hover{
        color: #262626;
        transition-delay: 0.4s;
    }

    /*openingHoverEffect*/
    a.openingHoverEffect{
        text-decoration: none;
        text-transform: uppercase;
        background: transparent;
        color: white;
        font-family: sans-serif;
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 0.2rem;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.2s;
    }

    a.openingHoverEffect:before {
        content: "";
        position: absolute;
        top: -0.2rem;
        left: -0.2rem;
        width: 100%;
        height: 100%;
        background: #20caff;
        z-index:-1;
        mix-blend-mode: multiply;
        transition: all 0.2s;
        transform-origin: top;
    }

    a.openingHoverEffect:hover:before {
        top: -0.5rem;
        transform: perspective(1000px) rotateX(75deg);        
        transition-delay: 0.4s;
    }

    a.openingHoverEffect:after {
        content: "";
        position: absolute;
        bottom: -0.2rem;
        right: -0.2rem;
        width: 100%;
        height: 100%;
        background: tomato;
        z-index:-2;
        mix-blend-mode: multiply;
        transition: all 0.2s;
        transform-origin: bottom ;
    }

    a.openingHoverEffect:hover:after {
        bottom: -0.5rem;
        transform: perspective(1000px) rotateX(-75deg);        
        transition-delay: 0.4s;
    }

    /*firstLetterRotating*/
    a.firstLetterRotating{
        text-decoration: none;
        text-transform: uppercase;
        background: transparent;
        color: white;
        border: 2px solid white;
        font-family: sans-serif;
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 0.2rem;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.2s;
    }

    a.firstLetterRotating:before {
        content: " ";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: tomato;
        z-index: -1;
        opacity: 0;
        transition: all 0.8s;
    }

    a.firstLetterRotating:hover:before{
        opacity: 1;
        transform: rotate(9deg);
    }
    a.firstLetterRotating span{
        position: relative;
        color: transparent;
    }
    a.firstLetterRotating span:before {
        content: "H";
        position: absolute;
        color: white;
        transition: all 0.2s;
    }
    a.firstLetterRotating:hover span:before{
        font-size: 5.5rem;
        transform: translate(-80%, -45%) rotate(360deg);
    }

    /*fourBordersGrowing*/
    a.fourBordersGrowing { 
        text-decoration: none;
        text-transform: uppercase;
        background: transparent;
        color: white;
        border: none;
        font-family: sans-serif;
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 0.2rem;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.2s;
        overflow: hidden;
    }
    a.fourBordersGrowing:before{
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 4px;
        background: white;
        transition: all 0.5s;
    }
    a.fourBordersGrowing:hover:before{
        left: 0;
    }

    a.fourBordersGrowing:after{
        content: "";
        position: absolute;
        bottom: 0;
        right: -100%;
        width: 100%;
        height: 4px;
        background: white;
        transition: all 0.5s;
    }
    a.fourBordersGrowing:hover:after{
        right: 0;
    }

    a.fourBordersGrowing span:before{
        content: "";
        position: absolute;
        top: 100%;
        left: 0;
        width: 4px;
        height: 100%;
        background: white;
        transition: all 0.5s;
    }
    a.fourBordersGrowing:hover span:before{
        top: 0;
    }

    a.fourBordersGrowing span:after{
        content: "";
        position: absolute;
        bottom: 100%;
        right: 0;
        width: 4px;
        height: 100%;
        background: white;
        transition: all 0.5s;
    }
    a.fourBordersGrowing:hover span:after{
        bottom: 0;
    }

    /*twocuts*/

    a.twocuts {
        text-decoration: none;
        text-transform: uppercase;
        background: transparent;
        color: white;
        border: none;
        font-family: sans-serif;
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 0.2rem;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.2s;
        overflow: hidden;
    }

    a.twocuts span {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: -1;
        background: transparent;
        border: 2px solid white;
    }

    a.twocuts span:before {
        content: "";
        position: absolute;
        width: 8%;
        height: 500%;
        top: 50%;
        left: 50%;
        background: tomato;
        transform: translate(-50%, -50%) rotate(-60deg);
        transition: all 0.5s;
    }
    a.twocuts:hover span:before {
    width: 100%;
    background: black;
    transform: translate(-50%, -50%) rotate(60deg);

    }

    a.twocuts:hover {
        color: white;
    }

    /*twoskewed*/
    a.twoskewed {
        text-decoration: none;
        text-transform: uppercase;
        background: transparent;
        color: white;
        border: none;
        font-family: sans-serif;
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 0.2rem;
        padding: 1rem 4rem;
        position: relative;
        transition: all 0.2s;
    }

    a.twoskewed:before {
        content: "";
        position: absolute;
        width: 50%;
        height: 100%;
        top: -0.4rem;
        left: -1.5%;
        z-index: -1;
        background: #ee5253;
        transform: skewX(30deg);    
        transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    a.twoskewed:hover:before {
        transform: skewX(0deg);
        left: 50%;
        top: 0;
    }
    a.twoskewed:after {
        content: "";
        position: absolute;
        width: 50%;
        height: 100%;
        top: 0.4rem;
        left: 51%;
        z-index: -1;
        background: #0a3d62;
        transform: skewX(30deg);    
        transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);   
    }

    a.twoskewed:hover:after {
        transform: skewX(0deg);
        left: 0%;
        top: 0;
    }

    /*animatedBorderNeon*/
    .animatedBorderNeon {
        position: relative;
        display: inline-block;
        padding: 1rem 2rem;
        color: #03e9f4;
        text-decoration: none;
        text-transform: uppercase;        
        border: none;
        font-family: sans-serif;
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 0.4rem;        
        transition: all 0.2s;
        overflow: hidden;
    }

    .animatedBorderNeon:hover {
        background: #03e9f4;
        color: #051130;
        box-shadow: 0 0 5px #03e9f4,
                    0 0 25px #03e9f4,
                    0 0 50px #03e9f4,
                    0 0 200px #03e9f4;
    }
</style>