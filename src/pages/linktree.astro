---
import Layout from "../layouts/Layout.astro";
import ProfilImage from "../images/profil/profil.webp"
import Github from "../images/social/github-mark.svg"
---
<Layout title="Mon Linktree">
    <main class="pt-32 pb-16">
      <div class="max-w-3xl mx-auto text-center">
        <div class="profileImage flex justify-center mx-auto mb-5 rounded-full overflow-hidden bg-fuchsia-800">
        <p class="cardTitle">Franck Vienot</p>
        <img src={ProfilImage.src} alt="Franck Vienot Profile image">
      </div>
        <h1 class="Linktree text-3xl font-bold mb-6">
          Mon Linktree
          </h1>
  
        <div class="space-y-4">
          <div class="">
              <a href="https://github.com/antikkorps" target="_blank" class="block p-3 bg-blue-500 text-white rounded">
              <img src={Github.src} alt="Github logo" width="40" height="40" />
              <p>GitHub</p></a>
          </div>
          <a href="https://www.instagram.com/franckvi" target="_blank" class="block p-3 bg-blue-500 text-white rounded">Instagram</a>
          
          <a href="https://www.linkedin.com/in/franck-vienot-a0129a1a0/" target="_blank" class="block p-3 bg-blue-500 text-white rounded">LinkedIn</a>
        </div>
      </div>
    </main>
  </Layout>

  <style>
    .Linktree {
      color: #f472b6;
      font-weight: 700;
      text-transform: uppercase;      
      letter-spacing: .5rem;
      text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .cardTitle {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 2rem;
      font-weight: 700;
      z-index: 2;
      text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      opacity: 0;
    }
    .profileImage {
      width: 16rem;
      height: 16rem;
      position: relative;
    }

    .profileImage:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      background:  rgb(134 25 143);
      border-radius: 50%;
      opacity: 0;
      transition: all 0.5s linear;
    }

    .profileImage:hover:before {
      opacity: 0.5;
      transition: all 0.5s linear;
    }

    .profileImage img {
      position: relative;
      width: 17rem;
      height: 17rem;
      object-fit: cover;
      display: block;
      margin: auto;
      transition: transform 0.5s linear; 

    }

    .profileImage:hover img {
      transform: scale(1.1) rotate(8deg);
      filter: blur(4px);
      transition: all 0.5s linear;
    }
    .profileImage:hover .cardTitle {
      opacity: 1;
      transition: all 0.5s linear;
    }

  
  </style>