---
import Layout from "../layouts/Layout.astro"
import maFormationImmo  from "../images/maformationimmo.png"
---

<Layout title="Projets Web">
<div class="py-20 w-full" transition:animate="slide">
    <h2 class="text-3xl text-center text-white py-5">Mes projets web</h2>

    <div class="flex flex-row flex-wrap w-full sm:w-2/6 px-10 sm:mx-auto pb-5 justify-center">
        <div class="rounded-md overflow-hidden my-5">
            
            <img src={maFormationImmo.src} alt="ma formation immo" class="double rounded-md">
            <span></span>
               
        </div>
        
        <div class="bg-white rounded-md overflow-hidden my-5 mx-auto w-full sm:w-2/6 sm:h-60">2</div>
        <div class="bg-white rounded-md overflow-hidden my-5 mx-auto w-full sm:w-2/6 sm:h-60">3</div>
        <div class="bg-white rounded-md overflow-hidden my-5 mx-auto w-full sm:w-2/6 sm:h-60">4</div>

    </div>
    
</div>
</Layout>

<style>
    .double {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.8;
        transition: all 0.3s linear;
    }
    .double:hover {
        opacity: 1;
        transform: scale(1.4) rotate(-6deg);
        transition: transform 0.5s;
    }
    .double:before {
        content: "";
        position: relative;
        top: 0;
        left: ;
        z-index: 1;
        width: 100%;
        height: 100%;
        background: red;
    }
    .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #fff;
        border: 1px solid #000;
        height: 15rem;
        width: 100%;
    }
</style>