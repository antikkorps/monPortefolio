---
import Layout from "../layouts/Layout.astro"
import QuizzComponent from "../components/QuizzComponent.astro";

---
<Layout title="Quizz">
    <div class="main_container">
        <div class="title-container">
            <h1>
                <span>
                    Quizz :
                </span>
                Besoin d'un dév ? - ☑️
            </h1>
            <p class="text-white text-center mt-2"> Voilà quelques questions pour vous aider à savoir si vous avez besoin ou non d'un développeur web</p>
        </div>
    <form action="" class="mx-4 px-4 sm:mx-auto">
        <QuizzComponent
        question="Votre projet est-il défini ?"
        answers={["Oui", "non", "Je ne suis pas sûr"]}
        correctAnswer="Oui"
        
        />

        <QuizzComponent
        question="Un cahier des charges est-il défini ?"
        answers={["Oui", "Non", "Pas encore"]}
        correctAnswer="Oui"
        
        />

        <QuizzComponent
        question="Est-ce que la date de livraison est définie ?"
        answers={["Oui", "Non", "Pas encore"]}
        correctAnswer="Rome"
        
        />

        <QuizzComponent
        question="Mon buget est-il défini et en accord avec mes objectifs ?"
        answers={["Oui", "Non", "Partiellement"]}
        correctAnswer="Oui"
        
        />
        <button type="submit" class="button_primary flex justify-center text-2xl text-center mx-auto my-6">Envoyer mes réponses</button>
    </form>

    <div class="message-container">
        <div class="message">
            <div class="emoji">
                emoji
            </div>
            <div class="message-text">
                message
            </div>
        </div>

</div>
</div>
</Layout>

<style>
     .main_container h1 {
        font-size: 3rem;
        font-weight: 700;
        text-align: center;
        color: #fff;
        text-shadow: 0 0 10px #000;
    }
    .title-container{
        padding-top: 6rem;
    }
  
</style>
