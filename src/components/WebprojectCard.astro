---
export interface Props {
  image: string
  title: string
  description: string
  details: string
  stack: string
  link: string
  src: string
}

const { image, title, description, details, stack, link, src } = Astro.props
---

<div class="container_image relative flex flex-col my-6">
    <img src={src} class="w-full sm:w-1/2 justify-center mx-auto">
    
    <div class="caption text-center text-white w-full sm:w-1/2">
        <h1 class="text-2xl">{title}</h1>
        <p class="my-2">{description}</p>
        <p>{details}</p>
        <p>les technologies utilis√©es : {stack}</p>
        <a href={link} class="links_basics my-4" target="_blank">Cliquez ici pour visiter le site</a>
    </div>
</div>

<style>

.container_image {
    position: relative;
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    }

.caption {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    bottom: -50;
    left: 50;
    height: 100%;
    background: black;
    opacity: 0;
    transition: 0.5s ease;
    transform: translateY(100%);
}

.container_image:hover .caption {
    bottom: 50;
    opacity: 0.8;
    transition: 0.5s ease;
    transform: translateY(0);

}

</style>